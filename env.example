# Database - Neon PostgreSQL
DATABASE_URL="postgresql://your_user:your_password@your_host/your_db?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://your_user:your_password@your_host_unpooled/your_db?sslmode=require"

# Vercel Postgres Templates (for Neon compatibility)
POSTGRES_URL="postgresql://your_user:your_password@your_host/your_db?sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://your_user:your_password@your_host_unpooled/your_db?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://your_user:your_password@your_host/your_db?connect_timeout=15&sslmode=require"
POSTGRES_USER="your_user"
